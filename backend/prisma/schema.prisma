generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// (ENUM)
enum TipoDificultad {
  Facil
  Medio
  Dificil
}

// tabla Usuario
model Usuario {
  id              Int                 @id @default(autoincrement())
  nombre          String              @db.VarChar(100)
  email           String              @unique @db.VarChar(100)
  fecha_registro  DateTime            @default(now())
  registrosHabito RegistroHabito[]
  participaciones ParticipacionReto[]
}

model Habito {
  id              Int              @id @default(autoincrement())
  nombre          String           @db.VarChar(50)
  dificultad      TipoDificultad
  registrosHabito RegistroHabito[]
}

model RegistroHabito {
  id        Int      @id @default(autoincrement())
  usuario   Usuario  @relation(fields: [usuarioId], references: [id])
  usuarioId Int
  habito    Habito   @relation(fields: [habitoId], references: [id])
  habitoId  Int
  fecha     DateTime @default(now())
  progreso  Json? // Ejemplo del json { "dias_consecutivos": 5, "meta": 30 }
}

model Reto {
  id              Int                 @id @default(autoincrement())
  nombre          String              @db.VarChar(50)
  fecha_inicio    DateTime
  fecha_fin       DateTime
  participaciones ParticipacionReto[]
}

model ParticipacionReto {
  id         Int     @id @default(autoincrement())
  usuario    Usuario @relation(fields: [usuarioId], references: [id])
  usuarioId  Int
  reto       Reto    @relation(fields: [retoId], references: [id])
  retoId     Int
  completado Boolean @default(false)
}
